<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add new Humana shop in Berlin</h3>
        <%= simple_form_for @shop do |f| %>
          <%= f.input :name %>
          <%= f.input :street %>
          <%= f.input :zipcode, input_html: { type: 'number' } %>
          <%= f.input :city %>
          <%= f.input :neighbourhood, collection: Shop::BERLIN_NEIGHBOURHOODS %>
          <%= f.input :popup %>
          <%= f.submit class: 'btn btn-flat mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
